@model Product
<div class="container">

    <div class="row">
        <div class="col-md">
            <div class="d-flex justify-content-center text-info"> <h5>Ürün Ekle</h5>  </div>
            
            <form method="post" asp-action="AddProduct" asp-controller="Urunler">

                <div class="form-group">
                    <label>Ürün Adı</label>
                    <input type="text" class=" form-control w-25 p-3 form-text" placeholder="Ürün Adı" asp-for="ProductName" />
                </div>
                <div class="form-group">
                    <label>Birim Fiyatı</label>
                    <input type="text" class=" form-control w-25 p-3 form-text" placeholder="Birim Fiyatı" asp-for="UnitPrice" />
                </div>
                <div class="form-group">
                    <label>Stok Adedi</label>
                    <input type="text" class=" form-control w-25 p-3 form-text" placeholder="Stok Adedi" asp-for="UnitInStock" />
                </div>
                <div class="form-group">
                    <label>Ürün Tipi</label>
                    <input type="text" class="form-control w-25 p-3 form-text" placeholder="Ürün Tipini Girin" asp-for="ProductType" />
                </div>
                <div class="form-group">
                    <label>Markası</label>
                    <input type="text" class=" form-control w-25 p-3 form-text" placeholder="Markası" asp-for="Brand" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>

            </form>

            


        </div>
    </div>

</div>