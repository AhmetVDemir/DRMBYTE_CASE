<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <title>@ViewData["Title"] Kullanıcı </title>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light text-center justify-content-center" style="background-color: #e3f2fd;">
            <a class="navbar-brand text-dark fw-bold text-md-center" asp-area="UserInterface" asp-controller="Home" asp-action="Index"></a>

        </nav>
    </header>

    <div class="container-md">
        <div class="row">
            <div class="col-3 border-3 border-primary">
                <div class="card" style="width: 18rem;">
                    <div class="card-header">
                        İşlem Seçiniz
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a class="navbar-brand text-dark fw-bold text-md-center" asp-controller="Urunler" asp-action="GetAllProduct">Ürün Listesi</a>
                        </li>
                        <li class="list-group-item">
                            <a class="navbar-brand text-dark fw-bold text-md-center" asp-area="UserInterface" asp-controller="Urunler" asp-action="SalesOp">Sepet</a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-9">@RenderBody()</div>
        </div>


    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>


</html>